@model IEnumerable<Engrams.Models.Memory>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TagId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParentId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tag.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parent.Title)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MemoryId }) |
                @Html.ActionLink("Details", "Details", new { id = item.MemoryId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MemoryId })
            </td>
        </tr>
    }

</table>
